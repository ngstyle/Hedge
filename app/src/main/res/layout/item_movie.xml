<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="65dp"
        android:src="@mipmap/ic_launcher"
        android:layout_marginRight="8dp"
        android:layout_height="100dp" />

    <TextView
        android:id="@+id/tv_movie_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/avatar"
        android:text="极限特工"
        android:textSize="16sp"
        android:gravity="left" />

    <TextView
        android:id="@+id/tv_directors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_movie_name"
        android:layout_below="@id/tv_movie_name"
        android:text="导演："
        android:textSize="12sp"
        android:gravity="left" />

    <TextView
        android:id="@+id/tv_casts"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_directors"
        android:layout_below="@id/tv_directors"
        android:text="主演："
        android:textSize="12sp"
        android:gravity="left" />

</RelativeLayout>